<h1>Burgers!</h1>

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-4">
    <h2>Not devoured!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-sm-4">
    <h2>Devoured</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
        <li>{{burger_name}}</li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-2"></div>
</div>


<h2>Order a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  
  <button type="submit">Add burgers</button>
</form>